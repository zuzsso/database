{
    "name": "your/reponame",
    "description": "Common shareable functionality",
    "type": "library",
    "authors": [
        {
            "name": "you",
            "email": "you@yourserver.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "platform": {
            "php": "7.4.28"
        }
    },
    "autoload": {
        "psr-4": {
            "Database\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Database\\Tests\\": "tests/"
        }
    },
    "require": {
        "doctrine/dbal": "^3.3",
        "php-di/php-di": "^6.2",
        "ext-json": "*",
        "zuzsso/di-manifest": "^1.0",
        "zuzsso/typed-collection": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2.3",
        "phpmd/phpmd": "@stable",
        "friendsofphp/php-cs-fixer": "*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/zuzsso/di-manifest"
        },
        {
            "type": "vcs",
            "url": "https://github.com/zuzsso/typed-collection"
        }
    ]
}
